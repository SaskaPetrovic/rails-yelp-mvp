<%= simple_form_for @restaurant do |f| %>
  <div class="mb-3">
    <%= f.input :name, input_html: { class: 'form-control' } %>
  </div>
  <div class="mb-3">
    <%= f.input :address, input_html: { class: 'form-control' } %>
  </div>
  <div class="mb-3">
    <%= f.input :phone_number, input_html: { class: 'form-control' } %>
  </div>
  <div class="mb-3">
    <%= f.input :category, collection: %w[chinese italian japanese french belgian], input_html: { class: 'form-select' } %>
  </div>
  <div class="mb-3">
    <%= f.submit 'Create Restaurant', class: 'btn btn-primary' %>
  </div>
<% end %>
